{
  "name": "moneytor",
  "version": "1.0.0",
  "main": "app.js",
  "author": "Kenneth",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "NODE_ENV=test mocha --require babel-register --exit",
    "cover": "nyc --reporter=html --reporter=text mocha --require babel-register --recursive --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build": "babel ./ -d build --copy-files --ignore 'node_modules, build, py' ",
    "start": "npm run build && node build/app",
    "start:dev": "./node_modules/.bin/babel-watch app.js",
    "pm2:restart": "./pm2.sh"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "json-request-validator": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongodb": "^3.2.3",
    "mongoose": "^5.5.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "request": "^2.88.0",
    "socket.io": "^2.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-watch": "^2.0.8",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha": "^6.1.4"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "class-methods-use-this": 0,
      "no-underscore-dangle": 0,
      "camelcase": 0,
      "no-restricted-syntax": 0,
      "no-await-in-loop": 0,
      "max-len": 0,
      "no-plusplus": 0,
      "no-continue": 0,
      "guard-for-in": 0,
      "no-param-reassign": 0,
      "no-nested-ternary": 0
    }
  },
  "eslintIgnore": [
    "py/"
  ]
}
